<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/xams"
    android:orientation="vertical"
    tools:context=".AddOrders">


    <TextView
        android:id="@+id/textkey"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/akaya_telivigala"
        android:text="Back"
        android:textColor="@color/white"
        android:textSize="45dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/myorderss"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/akaya_telivigala"
        android:text="Add Orders"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textSize="45dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <EditText
            android:id="@+id/et"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:hint="Name"
            android:textColorHint="@color/white"
            android:ems="10"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et1"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/et"
            android:hint="Price"
            android:layout_marginLeft="20dp"
            android:ems="5"
            android:textColorHint="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/et2"
        android:textColor="@color/white"
        android:hint="ID"
        android:layout_marginLeft="10dp"
        android:ems="5"
        android:textColorHint="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:layout_marginLeft="150dp"
            android:text="ADD"/>


</RelativeLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



        </TableRow>
    </TableLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="20dp"
        android:layout_marginLeft="110dp"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textSize="20dp"
        android:layout_marginLeft="80dp"
        android:textColor="@color/white"/>

</LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">


        <ListView
            android:id="@+id/ListViewid"
            android:layout_width="144dp"
            android:layout_height="wrap_content"/>

            <ListView
                android:id="@+id/ListView"
                android:layout_width="144dp"
                android:layout_toRightOf="@+id/ListViewid"
                android:layout_height="wrap_content"

                />
            <ListView
                android:id="@+id/ListView1"
                android:layout_toRightOf="@+id/ListView"
                android:layout_width="144dp"
                android:layout_height="wrap_content"

                />


    </RelativeLayout>




</LinearLayout>